{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "baseUrl": "./src",
    "paths": {
      "packages/*": ["../packages/*"],
      "net-storage": ["app/modules/net-storage"],
      "database": ["app/modules/database"],
      "home": ["app/modules/home"],
      "markdown": ["app/modules/markdown"],
      "core": ["app/modules/core"],
      "shared": ["app/modules/shared"],
      "material": ["app/modules/material"],
      "@metaseed/angular-hotkey": ["dist/@metaseed/angular-hotkey"],
      "@metaseed/angular-hotkey/*": ["dist/@metaseed/angular-hotkey/*"],
      "@metaseed/spinner": ["dist/@metaseed/spinner"],
      "@metaseed/spinner/*": ["dist/@metaseed/spinner/*"]
    },
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"]
  }
}
